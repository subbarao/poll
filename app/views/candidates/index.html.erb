<h3>Listing Candidates</h3>

<table class="table table-condensed table-bordered">
  <thead>
    <tr bgcolor="#a9a9a9">
      <th>Name</th>
      <th>Sex</th>
      <th>Age</th>
      <th>Address</th>
      <th>Mobile</th>
      <th>Email</th>
      <th>Pan</th>
      <th>Married</th>
      <th>Spouse name</th>
      <th>Education</th>
      <th>Occupation</th>
      <th>Income for 2012 2013</th>
      <th colspan="3"> Action </th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.name %></td>
        <td><%= candidate.sex %></td>
        <td><%= candidate.age %></td>
        <td><%= candidate.address %></td>
        <td><%= candidate.mobile %></td>
        <td><%= candidate.email %></td>
        <td><%= candidate.pan %></td>
        <td><%= candidate.married %></td>
        <td><%= candidate.spouse_name %></td>
        <td><%= candidate.education %></td>
        <td><%= candidate.occupation %></td>
        <td><%= candidate.income_for_2012_2013 %></td>
        <td><%= link_to 'Show', candidate, class: "btn btn-mini btn-info active" %></td>
        <td><%= link_to 'Edit', edit_candidate_path(candidate), class: "btn btn-mini btn-warning active" %></td>
        <td><%= link_to 'Destroy', candidate, method: :delete, class: "btn btn-mini btn-danger active", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Candidate', new_candidate_path, class: "btn btn-small btn-success active" %>
